<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".fragment.ThemNguoiDungFragment">
    <ImageView
        android:layout_width="600px"
        android:layout_height="600px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_add_user"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_username_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Tài khoản"
        app:hintTextColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        app:boxStrokeColor="@color/primary_color">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ed_username_add_user"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_name_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Họ và tên"
        app:hintTextColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        app:boxStrokeColor="@color/primary_color">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ed_name_add_user"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_pass_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:layout_marginTop="15dp"
        app:endIconMode="password_toggle"
        app:hintTextColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        app:boxStrokeColor="@color/primary_color">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ed_password_add_user"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_repass_add_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Nhập lại mật khẩu"
        app:endIconMode="password_toggle"
        app:hintTextColor="@color/primary_color"
        android:textColorHint="@color/primary_color"
        app:boxStrokeColor="@color/primary_color">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ed_repassword_add_user"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:id="@+id/check_trung"/>

    <Button
        android:id="@+id/btn_add_user"
        android:layout_gravity="center"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login"
        android:text="Thêm"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary_color" />

</LinearLayout>